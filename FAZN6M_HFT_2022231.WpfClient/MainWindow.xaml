<Window x:Class="FAZN6M_HFT_2022231.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAZN6M_HFT_2022231.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding Musicians}" SelectedItem="{Binding SelectedMusician}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Label Content="Name" Background="LightBlue" Padding="10" />
            <TextBox Text="{Binding SelectedMusician.Name}" Padding="10" Margin="0,0,0,30" />
            <Button Content="Create Musician" Command="{Binding CreateMusicianCommand}" Margin="10" Padding="10"/>
            <Button Content="Delete Musician" Command="{Binding DeleteMusicianCommand}" Margin="10" Padding="10"/>
            <Button Content="Update Musician" Command="{Binding UpdateMusicianCommand}" Margin="10" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
